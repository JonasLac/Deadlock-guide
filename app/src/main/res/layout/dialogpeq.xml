<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/apCorItem"
            android:padding="10sp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do item"
                    android:fontFamily="@font/abril_fatface"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/valorItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor"
                    android:fontFamily="@font/abril_fatface"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="210sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/itemImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/apcatadordebalas"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/apClaro"
            android:orientation="vertical"
            android:padding="10sp">
            <TextView
                android:id="@+id/detalhesOne"
                android:fontFamily="@font/abril_fatface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="Detalhes"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/detalhesTwo"
                android:layout_width="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="Detalhes"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/detalhesThree"
                android:fontFamily="@font/abril_fatface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="Detalhes"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ativo"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="30sp">

            <LinearLayout
                android:layout_width="321sp"
                android:layout_height="30sp"
                android:background="@color/apEscuro">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Passiva"
                    android:fontFamily="@font/abril_fatface"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:background="@color/black">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icontime"/>
                <TextView
                    android:id="@+id/timepass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/abril_fatface"
                    android:layout_marginLeft="5sp"
                    android:text="00s"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutPassiva"
            android:visibility="visible"
            android:background="@color/apMaisEscuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/textPassiva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/corGamePadrao"
                android:text="text"
                android:layout_margin="10sp"
                android:textSize="15sp"
                android:fontFamily="@font/abril_fatface"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/compLayout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/apInfo"
            android:orientation="horizontal"
            android:padding="10sp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Componente de:"
                    android:fontFamily="@font/abril_fatface"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/componte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface"
                    android:text="Detalhes"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20sp"
                android:gravity="end">
                <ImageView
                    android:id="@+id/componenteimg"
                    android:layout_marginTop="5sp"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/compespiritoaprimorado"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutInfos"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/apClaro">
            <LinearLayout
                android:id="@+id/layoutOne"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="350sp"
                android:layout_height="30sp"
                android:background="@color/apEscuro">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/abril_fatface"
                    android:textSize="15sp"
                    android:text="duracap 55%/s"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutTwo"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="350sp"
                android:layout_height="30sp"
                android:background="@color/apEscuro">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/abril_fatface"
                    android:textSize="15sp"
                    android:text="duracap 55%/s"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutThree"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="350sp"
                android:layout_height="30sp"
                android:background="@color/apEscuro">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/abril_fatface"
                    android:textSize="15sp"
                    android:text="duracap 55%/s"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutFor"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="350sp"
                android:layout_height="30sp"
                android:background="@color/apEscuro">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/abril_fatface"
                    android:textSize="15sp"
                    android:text="duracap 55%/s"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>